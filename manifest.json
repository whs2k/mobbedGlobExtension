{
    "name": "Usage Stats",
    "version": "1.0",
    "description": "Keeps tab on your web usage.",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "<all_urls>", 
        "downloads", 
        "storage"
    ],
    "background": {
        "scripts": ["idb.js", "background.js"],
        "persistent": true
    },
    "manifest_version": 2,
    "icons": {
        "512": "icon.png"
    }
}